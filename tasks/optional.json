{
    "tasks": [
        {
            "name": "Update Flatpak apps",
            "check_command": ["which", "flatpak"],
            "description": "Update all installed Flatpak applications",
            "command": ["flatpak", "update", "-y"],
            "auto_safe": false,
            "risk_level": "medium",
            "requires_sudo": false
        },
        {
            "name": "Remove unused Flatpak runtimes",
            "check_command": ["which", "flatpak"],
            "description": "Remove unused Flatpak runtimes and extensions",
            "command": ["flatpak", "uninstall", "--unused", "-y"],
            "auto_safe": false,
            "risk_level": "low",
            "requires_sudo": false
        },
        {
            "name": "Update Snap packages",
            "check_command": ["which", "snap"],
            "description": "Update all installed Snap packages",
            "command": ["snap", "refresh"],
            "auto_safe": false,
            "risk_level": "medium",
            "requires_sudo": false
        },
        {
            "name": "Show snap revisions",
            "check_command": ["which", "snap"],
            "description": "Show all installed Snap package revisions",
            "command": ["snap", "list", "--all"],
            "auto_safe": false,
            "risk_level": "low",
            "requires_sudo": false
        },
        {
            "name": "Docker disk usage",
            "check_command": ["which", "docker"],
            "description": "Show Docker disk usage",
            "command": ["docker", "system", "df"],
            "auto_safe": false,
            "risk_level": "low",
            "requires_sudo": false
        }
    ]
}