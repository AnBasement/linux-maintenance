{
  "tasks": [
    {
        "name": "Vacuum system logs",
        "description": "Keep only last 30 days of system logs",
        "command": ["sudo", "journalctl", "--vacuum-time=30d"],
        "auto_safe": true,
        "risk_level": "low",
        "requires_sudo": true
    },
    {
        "name": "Update file database",
        "check_command": ["which", "updatedb"],
        "description": "Update the file name database",
        "command": ["sudo", "updatedb"],
        "auto_safe": true,
        "risk_level": "low",
        "requires_sudo": true
    },
    {
        "name": "Show failed services",
        "description": "List any failed systemd services",
        "command": ["systemctl", "--failed"],
        "auto_safe": true,
        "risk_level": "low",
        "requires_sudo": false
    },
    {
        "name": "Check disk space",
        "description": "Display disk space usage",
        "command": ["df", "-h"],
        "auto_safe": false,
        "risk_level": "low",
        "requires_sudo": false
    },
    {
        "name": "Trim SSD",
        "description": "Perform filesystem trim on all mounted filesystems",
        "command": ["sudo", "fstrim", "-av"],
        "auto_safe": false,
        "risk_level": "medium",
        "requires_sudo": true
    },
    {
        "name": "Aggressive log trimming",
        "description": "Reduce systemd journal logs to 100MB",
        "command": ["sudo", "journalctl", "--vacuum-size=100M"],
        "auto_safe": false,
        "risk_level": "medium",
        "requires_sudo": true
    }
  ]
}